{
    // Configurations for debugging FastAPI applications
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Agent API",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/main.py", // Replace with the entry point of your FastAPI app
            "args": [
                "run",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true,
            "console": "integratedTerminal"
        }
    ]
}